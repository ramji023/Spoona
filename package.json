{
  "name": "spoona",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "start:web":"cd apps/web && pnpm run preview --port 5173 --host 0.0.0.0",
    "db:generate":"cd packages/database && pnpm dlx prisma generate && cd ../../",
    "start:backend":"cd apps/api && node dist/index.js"
  },
  "devDependencies": {
    "prettier": "^3.6.2",
    "turbo": "^2.5.6",
    "typescript": "5.9.2"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  }
}
